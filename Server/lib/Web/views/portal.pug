extends layout

block Subject
	title= '끄투블루 - 웹으로 만나는 신박한 끝말잇기'

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')
block Top
	img(src='http://kkutu.blue/moremi.png', style='float: right; width:27px; height:27px; margin-top: 0.5px; margin-right: -5px')
block Middle
	+separator(5)
	
	+separator(5)
	div(style='float: left; width: 100%; margin-left: -5px;')
		div(style='float: left; padding-left: 70px;')
			img#logo(src='/img/kkutu/short_logo.png')

	div#menu-bar(style='float: right; margin-top: -2%;')

			a(target='_blank', href='//cafe.naver.com/kkutublue', style='background-color: #1DDB16;')= '끄투블루 카페'
			a(target='_blank', href='//www.youtube.com/channel/UCz0G1bvJ_0PAkFl0uN50DkA?', style='background-color: #ff0000;')= '끄투블루 유튜브'
			a(target='_blank', href='//discord.gg/6jJjqMW', style='background-color: #7289da;')= '끄투블루 디스코드'
	div(style='float: left; width: 300px; margin-top: -20px;')
	
		a(href='/?server=0')
			img(src='/image/start.png', style='width: 320px;')
	div(style='float: right; margin-top: 5px; width: 50%; margin-right: 40px;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 0px solid #CCC; margin-top: 10px; margin-left: -5px; background-color: none;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(0)
		iframe#kkutu-help(width='100%', height='400px', src='/help.html')
	script(data-ad-client='ca-pub-1295353688470340', async='', src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
block Bottom

	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')